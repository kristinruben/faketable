{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "exclude": ["./dist"]
}
